(setq package (getenv "package"))

(when (not (filep (bldmsg "%w.rtf" package)))
     (prin2t "########## kein .RTF file gefunden")
     (exitlisp))

(setq file(open (bldmsg "%w.hpj" package) 'output))

(channelprintf file "[OPTIONS]%n")
(channelprintf file "INDEX=main_index%n")
(channelprintf file "TITLE=REDUCE Help System: %w%n" package)
(channelprintf file "COMPRESS=true%n")
(channelprintf file "WARNING=1%n")
(channelprintf file "[FILES]%n")
(channelprintf file "%w.rtf  ; main topics%n" package)

(close file)

(setq file (open "do.bat" 'output))
(channelprintf file "f:\mstools\bin\hc30  %w%n" package)
(channelprintf file "copy %w.hlp d:\redu35\help%n" package)
(channelprintf file "del %w.hpj%n" package)
(close file)

(quit)
